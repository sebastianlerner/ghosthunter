<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#120612"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ghosthunt.SplashPage" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget28"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="UVA CS 2110, Spring 2014"
        android:textColor="#808080"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:text="Albert Schibani, Cindy Zhang"
        android:textColor="#808080"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:text="Sebastian Lerner, Molly Chheath"
        android:textColor="#808080"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/widget28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:src="@drawable/header" />

    <ImageButton
        android:id="@+id/btn_setting"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_highsc"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@drawable/settingsbtn" />

    <ImageButton
        android:id="@+id/btn_highsc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_instr"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@drawable/highscorebtn" />

    <ImageButton
        android:id="@+id/btn_start"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:background="@null"
        android:src="@drawable/start" />

    <ImageButton
        android:id="@+id/btn_instr"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_start"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@drawable/instructionsbtn" />

</RelativeLayout>